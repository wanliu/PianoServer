*
  box-sizing border-box
  
body
  margin 0
  background-color #DA0023
  
footer
  font-size 12px
  color #FFF
  text-align center
  margin-top 30px

  
ul.preview-list
  list-style none
  margin 0
  padding 2px
  &:after
    content ''
    display block
    clear both
  li
    padding 2px
    width 50%
    float left
    > a
      position relative
      border-radius 5px
      overflow hidden
      display block
      text-decoration none
      img
        width 100%
        display block
      .price-wrap
        position absolute
        bottom 0
        width 100%
        line-height 30px
        color #FFF
        text-align center
        background-color rgba(255, 90, 0, 0.8)

.center
  text-align center
.white
  color #FFF

.poster
  width 100%
  display block
    
.introduction
  padding 10px
  background-size 100% 100%
  background-repeat no-repeat
  background-image url('../images/background.jpg')
  
  .introduction-text
    font-size 14px
    overflow hidden
    margin 0
    padding 0 20px
    color #FFF
    text-align justify
    background-size 100%
    background-image url('../images/introduction-mid.png')
    p
      margin-top 0
    b
      font-size 16px
      display block
    .indent
      text-indent 2em
      margin 8px 0
    
  .introduction-top
  .introduction-mid
  .introduction-bottom
    width 100%
    margin auto
    display block