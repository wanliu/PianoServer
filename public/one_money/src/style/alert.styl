.alert-container
  top 0
  left 0
  width 100%
  height 100%
  // display none
  position absolute
  background rgba(0, 0, 0, 0.6)

  .panel-wrap
    position fixed
    width 100%
    top 100px
    .panel
      position relative
      top 50%
      width 80%
      min-height 160px
      margin auto
      overflow hidden
      background #fff
      border-radius 5px
      border 6px solid #F10043
      padding 35px 0

    .alert-close-btn
      background-color #666
      font-size 26px
      font-weight 900
      position absolute
      right 5px
      top 5px
      color #FFF
      display block
      width 25px
      text-align center
      line-height 25px
      border-radius 50%

    .alert-title
      text-align center
      font-size 20px
      color #F00
      font-weight 900
      
    .alert-msg
      text-align center
      padding-left 40px
      padding-right 40px
      word-break break-all
      
  .action-buttons
    text-align center
    
    .btn 
      outline none
      border none
      border-radius 5px
      padding 8px 12px
      color #FFF
      background-color #F10043
      
      &.success
        background-color #080