.alert-container {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: none;
  position: absolute;
  background: rgba(0, 0, 0, 0.6);
  border: 10px solid #F10043;
}

.alert-container .panel {
  top: 30%;
  width: 75%;
  margin: 0 auto;
  overflow: hidden;
  background: #fff;
  position: relative;
}

.alert-container .alert-header {

}

.alert-container .alert-close-btn {
  position: absolute;
  top: 15px;
  right: 15px;
  background: #999999;
  padding: 15px;
  border-radius: 50%;
  color: #FFFFFF;
}
