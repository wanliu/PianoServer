*
  box-sizing border-box

body
  margin 0
  
hr
  border none
  margin 5px 0
  border-bottom 1px solid #ddd
  
.poster
  width 100%
  display block
  
ul.promotions-list
  // background-image url('./images/background.jpg')
  // background-size 100% 100%
  &:after
    content ''
    display block
    clear both
  margin 0
  padding 2px
  list-style none
  > li
    width 50%
    padding 2px
    float left
    color #333
    
    .item-wrap
      overflow hidden
      border-radius 3px
      border 1px solid #ccc
      overflow hidden
      color #333
      display block
      text-decoration none
    
    header
      position relative
      height 150px
      img
        margin auto
        display block
        max-width 100%
        max-height 100%
      .status
        position absolute
        right 0
        top 0
        display block
        padding 5px 8px
        background-color #F00
        font-size 13px
        border-bottom-left-radius 5px
        color #FFF
        &.end
          background-color #333
        &.wait
          background-color #060
      .limit
        position absolute
        bottom 0
        width 100%
        line-height 30px
        text-align center
        font-size 13px
        background-color rgba(180,180,180,0.5)
    main
      padding 5px
      .title
        overflow  hidden
        text-overflow ellipsis
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical
        font-size 12px
        margin 0
        height 35px
        overflow hidden
      .price-wrap
        position relative
        .now-price
        .origin-price
          color #FF3030
          font-weight 900
        .origin-price
          position absolute
          right 0
