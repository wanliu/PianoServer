<div class="col-sm-12">
<div class="page-header">
  <h1>快速开店<small> 请选择你的经营品类</small></h1>
</div>

<%= panel_row column_class: 'col-sm-3', class: 'category-list' do %>
  <% if @industry.category %>
    <% @industry.category.children.each do |category| %>
      <%= link_to filter_brands_path(category_id: category.id ) do %>
        <%= panel category.title %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<hr />
<div class="pull-right">
  <%= link_to "以后再说", after_register_path(:distributor, step: :skip), class: 'btn btn-default btn-lg', method: :put %>
  <%= link_to "下一步", after_register_path(:distributor, step: :category), class: 'btn btn-primary btn-lg', method: "PUT" %>
</div>
</div>

<script type="text/javascript">
  $(".category-list>a").click(function(e) {
    e.preventDefault();

    var url = $(this).attr('href');
    $.ajax({
      url: url
    }).then(function(resp) {
      resp['results']
    })
  })
</script>
