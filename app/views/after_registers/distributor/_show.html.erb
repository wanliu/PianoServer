<% step = params[:step] || current_user.state %>
<% if step.nil? or step == "select" %>
  <%= render "after_registers/distributor/step1" %>
<% elsif step == "industry" %>
  <%= render "after_registers/distributor/step2" %>
<% elsif step == "shop" %>
  <%= render "after_registers/distributor/step3" %>
<% elsif step == "category" %>
  <%= render "after_registers/distributor/step4" %>
<% elsif step == "product" %>
  <% redirect_to root_path %>
<% end %>
