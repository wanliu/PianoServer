<a class="list-group-item<%= category_item.try(:open) ? ' open': ''%>  category-item child-<%= child_depth category_item %>" href='javascript: void(0);' data-category-id="<%= category_item.id %>" data-is-leaf='<%= category_item.is_leaf %>' data-children-fetched='false'>
  <%= toggle_arrow category_item %> <%= category_item.title %>
</a>

<% unless category_item.is_leaf %>
  <div class="list-group" data-parent-id="<%= category_item.id %>" style='display: none;'>
  </div>
<% end %>