<li class="list-group-item template-<%= template.id %> <%= template.default? ? "disabled" : "" %>">
  <%#= best_in_place template, :name, :as => :input, url: [:admins, industry, category, template], inner_class: 'form-control' %>
  <%= template.name || template.filename %>
  <div class="flags pull-right">
    <%# if category.upperd? %>
      <%#= icon :flash %>
    <%# end %>

  </div>

  <div class="btn-group btn-group-sm pull-right">
    <% url = File.join(url_for([:admins, industry, category, :templates ]), template.name) %>
    <%= link_to url, template.name do %>
      <%= icon :edit %>
    <% end %>
    <%#= link_to remove_property_category_path(industry, category, property_id: property), method: :delete, remote: true, class: 'btn btn-link ' do %>
      <%#= icon :remove %>
    <%# end %>
  </div>

  <%#= text_field_tag :title, property.title, placeholder: '新属性名', class: 'form-control', focus: true %>
</li>
