<div class="panel panel-default edit-template" id="template-<%= edit_template.name %>">
  <% url = admins_subject_template_path(subject, edit_template) %>
  <%= form_for edit_template, url: url, remote: true, html: { class: "form-" + edit_template.name } do |f| %>
  <div class="panel-heading">
    <h3 class="panel-title"><%= edit_template.name %></h3>
  </div>

  <div class="panel-body">
    <div id="editor-<%= edit_template.name %>" class="source-editor"><%= edit_template.content -%></div>
    <div class="variables">
      <div class="btn-group add-variable" role="group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          新增对象
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu toolbars">
          <% edit_template.customize_variables.each do |config| %>
            <li><%= link_to config[:title], '#',
                      data: {
                        toggle: 'modal',
                        target: modal_target(config),
                        class: config[:name],
                        link: variables_path(subject, edit_template)
                      } %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="btn-group-vertical" role="group" aria-label="variables">
        <% edit_template.variables.each do |var| %>
          <button type="button" class="btn btn-default"><%= var.name %></button>
        <% end %>
      </div>
    </div>
    <%= f.hidden_field :content, class: "template_content" %>
  </div>
  <div class="panel-footer">
    <div class="panel-actions">
      <%= f.submit :save, class: 'btn btn-primary' %>
      <%= link_to :Preview, '#',  class: 'btn btn-default' %>
      <%= link_to :upload, '#', class: 'btn-upload btn-default' %>
    </div>
    <div class="panel-attachments">
      <ul class="row-fluid file-list">
        <%= render partial: "attachment", collection: edit_template.attachments %>
      </ul>
    </div>
  </div>
  <% end %>
</div>

<script type="text/javascript">
  var EditTemplate = window.EditTemplate;
  var templateName = "template-<%= edit_template.name %>";
  var editorName= "editor-<%= edit_template.name %>";
  var url = "<%= url %>";

  var editor = new EditTemplate($('#' + templateName), editorName, { url: url });
</script>
