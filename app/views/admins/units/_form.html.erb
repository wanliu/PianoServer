<%= form_for [:admins, @unit] do |f| %>
  <div class="form-group">
    <%= f.label :name, "名称" %>
    <%= f.text_field :name, class: 'form-control', placeholder: '单位名称' %>
  </div>
  <div class="form-group">
    <%= f.label :title, "标题" %>
    <%= f.text_field :title, class: 'form-control', placeholder: '单位标题' %>
  </div>

  <div class="form-group">
    <%= f.label :summary, "描述" %>
    <%= f.text_field :summary, class: 'form-control', placeholder: '单位描述'  %>
  </div>

  <div class="form-group">
    <%= f.submit "提交" %>
  </div>
<% end %>