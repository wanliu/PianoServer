<%#= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="sign-input-group">
    <%= icon(:user) %>
    <%= f.text_field :username, autocomplete: "off", placeholder: '输入账户' %>
    <div class="error-block"><%= @user.errors[:username][0] %></div>
  </div>

  <div class="sign-input-group">
    <%= icon(:envelope)%>
    <%= f.email_field :email, autocomplete: "off", placeholder: '输入邮箱' %>
    <div class="error-block"><%= @user.errors[:email][0] %></div>
  </div>

  <div class="sign-input-group">
    <%= icon(:phone)%>
    <%= f.text_field :mobile, autocomplete: "off", placeholder: '输入手机' %>
    <div class="error-block"><%= @user.errors[:mobile][0] %></div>
  </div>

  <div class="sign-input-group">
    <%= icon(:lock)%>
    <%= f.password_field :password, autocomplete: "off", placeholder: '输入密码' %>
    <div class="error-block"><%= @user.errors[:password][0] %></div>
  </div>

  <div class="sign-input-group">
    <%= icon(:lock)%>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: '再次输入密码' %>
    <div class="error-block"><%= @user.errors[:password_confirmation][0] %></div>
  </div>

  <div class="text-center">
    <%= f.submit "注册", class: 'sign-btn' %>

    <% if not is_mobile_request? %>
      <div class="text-center">
        <%= link_to "返回登陆", new_session_path(resource_name),class: "link toggle-btn" %>  
      </div>
    <% end -%>

  </div>
<% end -%>
