<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="sign-input-group">
    <%= icon(:user)%>
    <%= f.text_field :username, autofocus: true, placeholder: '输入账户' %>
  </div>

  <div class="sign-input-group">
    <%= icon(:envelope)%>
    <%= f.email_field :email, placeholder: '输入邮箱' %>
  </div>

  <div class="sign-input-group">
    <%= icon(:phone)%>
    <%= f.text_field :mobile, placeholder: '输入手机' %>
  </div>

  <div class="sign-input-group">
    <%= icon(:lock)%>
    <%= f.password_field :password, autocomplete: "off", placeholder: '输入密码' %>
  </div>

  <div class="sign-input-group">
    <%= icon(:lock)%>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: '再次输入密码' %>
  </div>

  <div class="text-center">
    <%= f.submit "注册", class: 'sign-btn' %>
  </div>

  <% if not is_mobile_request? %>
    <span class="link toggle-btn">返回登陆</span>
  <% else %>
    <%= icon('menu-left toggle-btn  back-btn ')%>
  <% end -%>
<% end -%>
