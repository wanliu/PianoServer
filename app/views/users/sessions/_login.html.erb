<div class="sign-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="sign-input-group-mobile">
      <%= icon(:user)%>
      <%= f.text_field :login, autofocus: true, placeholder: '输入账户' %>
    </div>

    <div class="sign-input-group-mobile">
      <%= icon(:lock)%>
      <%= f.password_field :password, placeholder: '输入密码' %>
    </div>

    <div class="text-center">
      <%= f.submit "登 陆", class: 'sign-btn' %>
    </div>


    <% if devise_mapping.rememberable? -%>
      <div class="media">
        <div class="media-right">
          <div class="remenber-wrap">
            <%= f.check_box :remember_me %><%= f.label 'remember_me', :'记住我' %>
          </div>
        </div>
        <div class="media-body text-right">
          <%= link_to "马上注册", new_registration_path(resource_name), class: 'link' %>
          &nbsp;|&nbsp;
          <%= link_to "忘记密码?", new_password_path(resource_name), class: 'link' %>
        </div>
      </div>
    <% end -%>
  <% end %>
</div>