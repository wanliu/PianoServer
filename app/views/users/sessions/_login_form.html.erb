<%= bootstrap_flash %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="sign-input-group">
    <%= icon(:user)%>
    <%= f.text_field :login, autofocus: true, placeholder: '输入账户' %>
  </div>

  <div class="sign-input-group">
    <%= icon(:lock)%>
    <%= f.password_field :password, placeholder: '输入密码' %>
  </div>

  <% if is_mobile_request? %>
    <div class="text-center">
      <%= f.submit "登 陆", class: 'sign-btn' %>
    </div>
  <% end -%>
  <% if devise_mapping.rememberable? -%>
    <div class="media">
      <div class="media-right">
        <div class="remenber-wrap">
          <%= f.check_box :remember_me %><%= f.label 'remember_me', :'记住我' %>
        </div>
      </div>
      <div class="media-body text-right">
        <%= link_to "马上注册", new_registration_path(resource_name), class: 'link toggle-btn' %>
        <% if is_mobile_request? %>
        &nbsp;|&nbsp;
        <% end -%>
        <%= link_to "忘记密码?", new_password_path(resource_name), class: 'link forget' %>
      </div>
    </div>
  <% end -%>

  <% if not is_mobile_request? %>
    <div class="text-center">
      <%= f.submit "登 陆", class: 'sign-btn' %>
    </div>
  <% end -%>
<% end -%>
