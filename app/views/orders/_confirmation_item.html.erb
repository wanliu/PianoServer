<li class="list-group-item order-item"  id="order-item-<%= item.id %>">
  <div class="media">
    <div class="avatar media-left">
      <%= link_to shop_item_path(supplier.name, item.cartable) do %>
        <%= image_tag item.avatar_url, class: 'media-object', alt: "商品图片" %>
      <% end %>
    </div>
    <div class="title media-left">
      <%= item.title %>
    </div>

    <div class="properties media-left">
      <%= item.properties && item.properties.to_a.map { |item| item.join(':') }.join(';') %>
    </div>

    <div class="price media-left">
      <%= number_to_currency item.price %>
    </div>

    <div class="quantity media-left">
      <%= number_with_delimiter item.quantity %>
    </div>

    <div class="subtotal media-left">
      <%= number_to_currency item.price * item.quantity %>
    </div>
  </div>
</li>