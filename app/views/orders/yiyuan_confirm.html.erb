<div class='yiyuan-confirm order-confirm-mobile'>
  <%= form_for @order, url: yiyuan_confirm_orders_path do |f| %>
    <%= f.hidden_field :supplier_id %>

    <%= f.hidden_field :pmo_grab_id %>
    <%= f.hidden_field :one_money_id %>

    <div class='cart-group'>
      <div class='header'>
        <span class='shop'>
          <%= image_tag @supplier.avatar_url %><%= @supplier.title %>
        </span>
      </div>

      <div class="cart-item" data-cart-item-id="<%= @order_item.id %>">
        <div class='row'>
          <div class='avatar'>
            <div class='media'>
              <div class='media-left'>
                <%= image_tag @order_item.avatar_url, class: 'media-object', alt: "商品图片" %>
              </div>
              <div class='media-body'>
                <%= "#{@order_item.title} #{@order_item.properties_title}" %>
              </div>
            </div>
          </div>
        </div>
        <table class='table table-bordered'>
          <colgroup>
            <col width='30%'>
            <col width='10%'>
            <col width='20%'>
            <col width='10%'>
            <col width='30%'>
          </colgroup>
          <tbody>
            <tr>
              <td class='price'>单价:<%= number_to_currency @order_item.price %></td>
              <td colspan='3' class='quantity'><%= @order_item.quantity %></td>
              <td>小计:<span class='subtotal'><%= number_to_currency @order_item.price * @order_item.quantity %></span></td>
            </tr>
            <tr class='error'>
              <td></td>
              <td colspan='3' class='error-info alert alert-danger fade in'>最多只能购买<span class='max-quantity'></span>件</td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class='footer'>
        <td colspan='5' class='text-right'>
          <%= f.submit "提交订单", class: 'submit'%>
        </td>
      </div>
    </div>
  <% end %>
</div>