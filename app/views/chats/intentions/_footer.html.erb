    <li class="list-group-item order-table-total">
      <div class="order-total-desc clearfix">
        <div class="col-xs-4 col-sm-4">
          总价
        </div>
        <div class="col-xs-8 col-sm-8 total">
          <div class="text-right">
            <span class="text"><%= number_to_currency(@intention.total, unit:'￥') %>元</span>
