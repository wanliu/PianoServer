<%= form_for(@feedback) do |f| %>
  <div class="form-group">
    <%= label :feedback, :name do %>
      姓名<span class="required">*</span>
    <% end %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label :feedback, :mobile do %>
      手机
    <% end %>

    <%= f.number_field :mobile, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label :feedback, :information do %>
      您的建议<span class="required">*</span>
    <% end %>

    <%= f.text_area :information, rows: 5, class: "form-control" %>
  </div>

  <div class="form-group row">
    <div class="col-md-4 col-sm-4 col-xs-4">
      <%= link_to '查看反馈列表', feedbacks_path, class: "btn btn-default" %>
    </div>
    <div class="col-md-8 col-sm-8 col-xs-8 text-right">
      <span class="hidden">
        <%= f.check_box(:is_show, checked: false) %>
        <%= label :feedback, :is_show do %>
          是否公开
        <% end %>
      </span>
      <%= f.submit "提交", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>