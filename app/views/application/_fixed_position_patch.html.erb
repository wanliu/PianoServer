<script type="text/javascript" data-turbolinks-track>
  $('body')
    .off('focus.keyboard', 'input[type="text"], input[type="password"], textarea')
    .on('focus.keyboard', 'input[type="text"], input[type="password"], textarea', function() {
      if ($(window).width() < 768) {
        $('body').addClass('fixed-position-patch');
      }
    })
    .off('blur.keyboard', 'input[type="text"], input[type="password"], textarea')
    .on('blur.keyboard', 'input[type="text"], input[type="password"], textarea', function() {
      if ($(window).width() < 768) {
        $('body').removeClass('fixed-position-patch');
      }
    });

