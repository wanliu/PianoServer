<div class='orders col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1'>
  <ul class="nav nav-pills orders-tab current-history buyer-orders" role="tablist">
    <li role="presentation" class="active">
      <a href="javascript: void(0)" aria-controls="current-orders" role="tab" data-toggle="tab">未完成的订单</a>
    </li>
    <li role="presentation">
      <a href="<%= history_shop_admin_orders_path %>">历史订单</a>
    </li>
  </ul>

  <div role="tabpanel" class="tab-pane current-orders">
    <% if @orders.present? %>
      <%= render partial: "order", collection: @orders, as: :order %>
      <%= paginate @orders %>
    <% else %>
      <div class='text-center empty-orders'>没有正在处理的订单！</div>
    <% end %>
  </div>
</div>