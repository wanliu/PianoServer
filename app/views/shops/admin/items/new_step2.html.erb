<div class="panel panel-default panel-item-edit">
  <div class="panel-heading">
    <h3>创建自己的产品
      <small> ->
      <ol class="breadcrumb">
        <% @breadcrumb.each do |bread| %>
          <li><a href="javascript:void(0)"><%= bread.title.humanize %></a></li>
        <% end %>
        <li class="active"><%= @category.title %></li>
      </ol> </small></h3>
  </div>
  <div class="panel-body">
    <%= form_for @item, url: shop_admin_items_path(@shop.name), html: { class: "form-horizontal" } do |f| %>
      <div class="form-group">
        <%= f.label :images, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <% @item.images.each do |image| %>
            <%= image %>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :title, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :brand, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.select :brand, options_from_collection_for_select(Brand.all, 'id', 'title'), {}, class: 'form-control' %>
        </div>
      </div>

      <!-- 参考价 -->
      <div class="form-group">

        <%= f.label :price, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :price, class: 'form-control' %>
        </div>
      </div>

      <!-- 零售价 -->
      <div class="form-group">
        <%= f.label :public_price, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :public_price, class: 'form-control' %>
        </div>
      </div>

      <!-- 进货价 -->
      <div class="form-group">
        <%= f.label :income_price, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :income_price, class: 'form-control' %>
        </div>
      </div>

      <!-- 商店分类 -->
      <div class="form-group">
        <%= f.label :shop_category, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.select :shop_category, options_from_collection_for_select(@shop.shop_category.descendants, 'id', 'title'), {}, class: 'form-control' %>
        </div>
      </div>

      <hr />

      <% @properties.each do |property| %>
      <div class="form-group">
        <%= label_tag property.name, property.title, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= text_field "item", property.name, class: 'form-control' %>
        </div>
      </div>
      <% end %>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit :save, class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
