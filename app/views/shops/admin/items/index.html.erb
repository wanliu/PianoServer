  <div class="panel panel-default items-panel">
    <div class="panel-heading">
      <h3 class="panel-title">
        店铺商品
      </h3>
      <%= link_to new_shop_admin_item_path(@shop.name), class: "btn btn-success btn-add" do%>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        新增
      <% end %>
    </div>
    <div class="panel-body">
      <table class="tablesaw tablesaw-stack" data-tablesaw-mode="stack" data-tablesaw-mode-switch>
        <thead>
          <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="persist">商品项名</th>
          <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="4">所属分类</th>
          <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="3">出售价</th>
          <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="2">库存</th>
          <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="1">是否在售</th>
        </thead>
        <tbody>

        </tbody>
      </table>
    </div>
    <div class="panel-footer">

    </div>
  </div>
</div>

<script type="text/javascript">
  var shop_name = "<%= @shop.name %>",
      url = ['/', shop_name, '/admin/items/load_categories'].join(''),
      categoryContainer = $('.category-wrap .category-list'),
      itemsContainer = $('.items-panel'),
      container = new CategoryListWrap(categoryContainer, url, 3);

  new CategoryBreadcrumb(container, $('.category-panel .breadcrumb'));
  new CategoryItems(container, $('.items-panel .tbody'));
  new CategoryToolbar($('.category-toolbar'));
</script>
