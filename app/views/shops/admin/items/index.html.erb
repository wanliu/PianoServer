  <div class="panel panel-default items-panel">
    <div class="panel-heading">
      <h3 class="panel-title">
        店铺商品
      </h3>
      <button class="btn btn-success btn-add" disabled="disabled">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        新增
      </button>
    </div>
    <table class="tablesaw" data-tablesaw-mode="swipe">
      <thead>
        <th scope="col" class="title" data-tablesaw-sortable-col data-tablesaw-priority="persist">商品标题</th>
        <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="1">所属分类</th>
        <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="5">零售价</th>
        <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="4">批发价</th>
        <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="3">库存</th>
        <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="2">是否在售</th>
      </thead>
      <tbody>
        <%#= render partial: "item_line", collection: @items %>
      </tbody>
    </table>
  </div>
  <%= paginate @items %>

</div>

