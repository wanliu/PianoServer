<div class="shop-items-container">
  <div class="btn-toolbar category-toolbar" role="toolbar" >
    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle btn-category" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        分类
        <span class="caret"></span>
      </button>
    </div>
