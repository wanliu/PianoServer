<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">商店档案</h3>
  </div>
  <div class="panel-body">
    <%= form_for @shop, url: shop_admin_shop_profile_path(@shop.name) do |f| %>
      <div class="form-group">
        <%= f.label :logo_url %>
        <div class="image-uploader">
          <%= image_tag @shop.logo_url %>
          <input type="file" id="exampleInputFile">
          <p class="help-block">Example block-level help text here.</p>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :name, "商店名称" %>
        <%= f.text_field :name, class: 'form-control', readonly: "readonly" %>
      </div>
      <div class="form-group">
        <%= f.label :title, " 标题" %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :phone, "联系电话" %>
        <%= f.text_field :phone, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :website, "商店主页" %>
        <%= f.text_field :website, class: 'form-control' %>
      </div>


      <div class="form-group">
        <%= f.label :description, "描述" %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "确认" %>
      </div>
    <% end %>
  </div>
</div>
