<div class="brand-board">
  {% if shop.poster %}
    <img src="{{ shop.poster }}" class="shop-bgi">
  {% else %}
    <img src="http://wanliu-piano.b0.upaiyun.com/uploads/shop/poster/1/a3dcb5fc398857f21191dbe0587a6ff4.jpg" class="shop-bgi">
  {% endif %}
  <div class="container">
    <div class='shop-info'>
      <div class="media">
        <div class="shop-logo-wrapper">
          <img src="{{ shop.avatar_url }}" class="shop-logo" alt="{{ shop.name }}" />
        </div>
        <div class='name-address media-middle'>
          <p class='name'>{{ shop.title }}</p>
          <p class='address'>{{ shop.address }}</p>
        </div>
        <div class="attention media-right media-middle" href="#">
          <div>周访问量</div>
          {{ shop.week_hits }}
        </div>
      </div>
              <div class="bottom-shadows"></div>
    </div>
  </div>
</div>
