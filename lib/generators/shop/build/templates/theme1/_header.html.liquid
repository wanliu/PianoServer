<div class="brand-board">
  {% unless shop.poster %}
    <img src="{{ shop.poster }}" class="shop-bgi">
  {% else %}
    <img src="http://wanliu-piano.b0.upaiyun.com/uploads/shop/poster/100159/c252149e4b74529fba08a250eb8836bc.jpg" class="shop-bgi">
  {% endunless %}
  <div class='shop-info'>
    <div class="media">
      <div class="shop-logo-wrapper">
        <img src="{{ shop.avatar_url }}" class="shop-logo" alt="{{ shop.name }}" />
      </div>
      <div class='name-address'>
        <p class='name'>{{ shop.title }}</p>
        <p class='address'>{{ shop.address }}</p>
      </div>
      <a class="attention media-right media-middle" href="#">
        <div>周访问量</div>
        {{ shop.week_hits }}
      </a>
    </div>
  </div>
</div>
