<div class="brand-board">
  {% if shop.poster %}
    <img src="{{ shop.poster }}" class="shop-bgi">
  {% else %}
    <img src="http://wanliu-piano.b0.upaiyun.com/uploads/shop/poster/100159/7578f48e4ffe07c2813a5a89ad9df3f8.png" class="shop-bgi">
  {% endif %}
  <div class='shop-info'>
    <div class="media">
      <div class="shop-logo-wrapper">
        <img src="{{ shop.cover_url }}" class="shop-logo" alt="{{ shop.name }}" />
      </div>
      <div class='name-address media-middle'>
        <p class='name'>{{ shop.title }}</p>
      </div>
      <div class="attention media-right media-middle" href="#">
        <div>周访问量</div>
        {{ shop.week_hits }}
      </div>
    </div>
  </div>
</div>
