<div class="col-lg-3 col-md-3 col-sm-4 col-xs-6 cate-item">
  <div class="promotion" >
    <a href="{{ item.link_html | shop_link: shop }}" class="item-link-a">
      <div class="promotion-image-wrap">
        {{ item.cover_url | image_tag: class: 'promotion-image' }}
      </div>
      <div class="primotion-title-wrap">
        <p class="promotion-title">
          {{ item.title }}
        </p>
        <div class="price-board  clearfix" >
          <div class="prices text-center">
            <span class="disount-price">RMB : {{ item.price }}</span>
          </div>
        </div>
      </div>
    </a>
  </div>
</div>
