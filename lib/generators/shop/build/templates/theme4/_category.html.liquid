<div class="col-xs-4 col-sm-4 col-md-3 cate" >
  <a href="{{shop.link}}{{category.link_html}}" class="text-center logo-wrap">
    <div class="mask"></div>
    {% unless category.blank_image %}
      {{ category.cover_url | image_tag }}
    {% else %}
      {{ 'trans_blank.gif' | image_url | image_tag }}
    {% endunless %}

    <div class="text-center cate-title-wrap">
      <span class="cate-title">{{ category.title }}</span>
    </div>
  </a>
</div>
