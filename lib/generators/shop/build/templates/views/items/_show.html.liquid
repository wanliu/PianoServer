<div class="shop-item col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
<div class="shop-item-image">
  {{ item.image_url | image_tag }}
</div>

<div class="item-properties">
  <div class="media">
    <div class="media-left media-middle">
      商品名:{{ item.title }}
      <div>价格:￥{{ item.price }}</div>
    </div>
    <div class="media-body media-middle">
      <div class='favor-title text-center'>收藏</div>
      <div class='favor-count text-center'>0</div>
    </div>
    <div class="media-right media-middle">
      <div class='like-title text-center'>赞</div>
      <div class='like-count text-center'>0</div>
    </div>
  </div>
</div>

<div class='item-shop-infos'>
  <div class="media">
    <div class="media-left media-middle">
      <a class='shop-avatar' href="/{{ shop.name }}">
        <img src="{{ shop.logo_url_cover }}" alt="">
        {% comment %}{{ shop.image_url | image_tag }}{% endcomment %}
      </a>
    </div>
    <div class="media-body media-middle">
      <div class='name'>供应商： {{ shop.title }}</div>
      <div class='address'>地址：{{ shop.address }}</div>
      <div class='follow'>
        <span>关注：0</span>
        <button class="btn btn-follow">
          <span class="glyphicon glyphicon-plus"></span>
          <span>关注</span>
        </button>
      </div>
    </div>
    
  </div>
</div>

<div class='item-secodary-properties clearfix'>
  <div class='brand-saled-count'>
    <p class='brand col-xs-6 col-sm-6 col-md-6'>品牌:{{ item.brand_name }}</p>
    <p class='sale-count col-xs-6 col-sm-6 col-md-6 text-right'>总销量：0</p>
  </div>
  <p class='inventory col-xs-6 col-sm-6 col-md-6 '>库存数量：充足</p>
</div>

{% comment %}
<div class='item-descriptions'>
 <div class="item-brief-description">
    <label>商品介绍</label>
    <p class="brief-desc">
    {% if item.description.blank? %}
    暂无简介
    {% else %}
    {{ item.description }}
    {% endif %}
    </p>
  </div>

  <div class="item-detail-decription"></div>
  <label class='properties-title'>参数规格</label>
  <div class="detail-desc">
    <div class="media">
      <div class="media-left media-top">
        <div class='avatar'>
        {{ item.image_url | image_tag }}
        </div>
      </div>
      <div class="media-body media-top">
        <div class='property-items'>
          {% for attribute in item.additional_fields.attributes %}
          <div class="property-item col-xs-12 col-sm-12 col-md-6">
            {% for item in attribute %}
            <div class="item-key col-md-3">{{items[0]}}:</div>
            <div class="item-value col-md-9">{{items[1]}}</div>
            {% endfor %}
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endcomment %}
<div class="navbar-bottom navbar navbar-default navbar-fixed-bottom">
  <div class="link-table">
    <a class="into-shop" href="/{{shop.name}}">
      <span class="button-icon glyphicon glyphicon-home"></span>
      <div class="button-text">商家</div>
    </a>

    <div class="fav-button">
      <span class="button-icon glyphicon glyphicon-star-empty"></span>
      <div class="button-text">收藏</div>
    </div>

    <div class="cart-button">
      <span class="button-icon glyphicon glyphicon-shopping-cart"></span>
      <div class="button-text">购物车</div>
    </div>

    <a class="buy-button" href="#">
      购买
    </a>

    {% if shop.owner_id == current_user.id %}
      <div class="contact-button">您的店铺</div>
    {% else %}
      {{ '洽谈' | button_to_chat: item, shop, form_class: 'contact-button'}}
    {% endif %}

  </div>
</div>
</div>

