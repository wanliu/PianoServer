
<div class="promotion-detail-container clearfix">
	<div class="promotion-detail-content">
		<div class="promotion-poster-image">
			{{ item.avatar_url | image_url | image_tag }}
			<img class="promotion-poster" src="http://neil-img.b0.upaiyun.com/2015/01/30/f19983dba057f227bbdc29423aac3fe4.jpg" alt="F19983dba057f227bbdc29423aac3fe4">
		</div>

		<div class="price-period clearfix">
			<div class="price-desc">
				<div class="promotion-price" style="font-size:1.4em">
					￥ {{ item.price }}
				</div>
				<div class="dicount-desc">
					<p><s>￥186.0</s></p>
					<span class="desc-text">
					限时抢购
					</span>
				</div>
			</div>

			<div class="period-desc finished">
				<div class="desc-wrap">活动已结束</div>
			</div>
		</div>

		<div class="title-contact">
			<div class="promotion-title">{{ item.title }}</div>
			<div class="promotion-favors">
				<p>收藏</p>
				0
			</div>
			<div class="promotion-likers">
				<p>赞</p>
				0
			</div>
		</div>

		<div class="shop-brief clearfix">
			<div class="shop-logo">
			{{ shop.avatar_url | image_url | image_tag }}
			</div>

			<div class="shop-desc">
				<p>供应商: {{ shop.title }}</p>
				<p>地址:{{ shop.address }}</p>
				<p>关注:100
					<button class="btn btn-follow">
						<span class="glyphicon glyphicon-plus">关注</span>
					</button>
				</p>
			</div>
		</div>

		<div class="product-brief">
			<div class="row">
				<div class="col-xs-7 col-md-7">
					<p>品&nbsp;&nbsp;牌：{{ item.brand_name }}</p>
				</div>
				<div class="col-xs-5 col-md-5">
					<p class="text-right">访问量：0</p>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-7 col-md-7">
					<p>库&nbsp;&nbsp;存：30件</p>
				</div>
			</div>
		</div>

		<div class="navbar-bottom navbar navbar-default navbar-fixed-bottom">
			<div class="link-table">
				<!-- <a class="chat contact-button" href="javascript:void(0);">洽谈</a> -->
				<a class="chat contact-button" style="text-decoration: none;" href="#">洽谈</a>
			</div>
		</div>
	</div>
</div>






{% comment %}

<div class="item">
	<div class='col-xs-12 col-sm-6 avatar row-line'>
	{{ item.avatar_url | image_url | image_tag }}
	</div>

	<div class='col-xs-12 col-sm-6 price row-line'>
		￥ {{ item.price }}
	</div>

	<div class='col-xs-12 col-sm-6 title row-line'>
		<div class='product-name col-xs-7 col-sm-4'>
		{{ item.title }}
		</div>
		<div class='favor col-xs-3 col-sm-1'>
			<div class='favor-title text-center'>收藏</div>
			<div class='favor-count text-center'>12</div>
		</div>
		<div class='like  col-xs-2 col-sm-1'>
			<div class='like-title text-center'>赞</div>
			<div class='like-count text-center'>21</div>
		</div>
	</div>

	<div class='col-xs-12 col-sm-6 shop-info row-line'>
		<div class='shop-avatar col-xs-2 col-sm-1'>
		{{ shop.avatar_url | image_url | image_tag }}
		</div>
		<div class='shop-info col-xs-10 col-sm-5'>
			<div class='name'>供应商： {{ shop.title }}</div>
			<div class='address'>地址：{{ shop.address }}</div>
			<div class='follow'>关注：22</div>
		</div>
	</div>

	<div class='col-xs-12 col-sm-6 summary row-line'>
		<div class='brand-saled-count'>
			<div class='brand col-xs-6 col-sm-3'>品牌：{{ item.brand_name }}</div>
			<div class='sale-count col-xs-6 col-sm-3'>总销量：155</div>
		</div>
		<div class='inventory col-xs-6 col-sm-6 '>库存数量：222</div>
	</div>

	<div class='col-xs-12 col-sm-12 properties row-line'>
		<div class='properties-title'>参数规格</div>
		<div class='col-xs-6 col-sm-6 avatar'>
			{{ item.avatar_url | image_url | image_tag }}
		</div>
		<div class='col-xs-6 col-sm-6 property-items'>
		<%# @item.additional_fields.attributes.each do |key, value| %>
		<%# unless key =~ /原始链接/ %>
		<p><%#= key %>: <%#= value %></p>
		<%# end %>
		<%# end %>
		</div>
	</div>
</div>{% endcomment %}

{% comment %}<div class="promotion-detail-container">
	<div class="navbar-bottom navbar navbar-default navbar-fixed-bottom">
	<div class="link-table">
		<%#= link_to shop_site_path(@item.shop.name), class: "into-shop" do %>
		<span class="button-icon glyphicon glyphicon-home"></span>
		<div class="button-text">商家</div>
		<% end %>

		<div class="fav-button">
		<span class="button-icon glyphicon glyphicon-star-empty"></span>
		<div class="button-text">收藏</div>
		</div>

		<%= link_to '洽谈', chats_path(item_id: @item, shop_id: @shop), class: "chat", method: 'POST' %>
	</div>
	</div>
</div>{% endcomment %}
