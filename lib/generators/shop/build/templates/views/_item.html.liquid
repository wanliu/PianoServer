<div class="promotion">
  {% link_to shop_link_to shop | item.link  %}
    {{ item.image_url | image_tag: class: 'promotion-image' }}
    <p class="promotion-title">
       {{ item.title }}
    </p>
    <div class="price-board clearfix">
      <a class="snap-up" href="javascript:void(0);">马上抢购</a>
      <div class="prices">
        <span class="disount-price">￥{{ item.discount_price }}</span>
        <span class="origin-price"><s>￥{{ item.product_price }}></s></span>
      </div>
    </div>
  {% endlink_to %}
  <div class="provider-wrap">
    <a href="/{{ promotion.shop_name }}" >
      <div class="provider">
        <div class="provider-name">
          {{ item.shop_name }}
          <div>{{ item.created_at | date: '%Y/%m/%d %H:%M' }}</div>
        </div>
      </div>
    </a>
  </div>
</div>
