<div class="col-xs-4 col-sm-3 cate">
  <a href="{{shop.link}}/{{category.link}}" class="text-center" >
    {% unless category.blank_image %}
      {{ category.cover_url | image_tag }}
    {% else %}
      {{ 'trans_blank.gif' | image_url | image_tag }}
      <div>
        <span>{{ category.title }}</span>
      </div>
    {% endunless %}
  </a>
  <span class='text text-center'>{{ category.title }}</span>
</div>
