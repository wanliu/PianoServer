<div class="brand-board bottom-shadows">
  <img src="{{ shop.poster }}" class="shop-bgi">
  <div class='shop-info'>
    <div class="media">
      <div class="shop-logo-wrapper">
        <img src="{{ shop.avatar_url }}" class="shop-logo" alt="{{ shop.name }}" />
      </div>
      <div class='name-address'>
        <p class='name'>{{ shop.title }}</p>
        <p class='address'>{{ shop.address }}</p>
      </div>
      <div class="attention media-right media-middle" href="#">
        <div>周访问量</div>
        {{ shop.week_hits }}
      </div>
    </div>
  </div>
</div>
